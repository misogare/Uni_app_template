<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/base_background"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/pag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/svge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <TextView
        android:id="@+id/meow"
        android:layout_width="313dp"
        android:layout_height="56dp"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Forgot password?"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.201"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.112" />

    <TextView
        android:id="@+id/wew"
        android:layout_width="327dp"
        android:layout_height="44dp"

        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"

        android:text="Don't worry; we're here to help you regain
         access to your account."
        android:textColor="#575757"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@id/meow"
        app:layout_constraintTop_toBottomOf="@id/meow" />

    <TextView
        android:id="@+id/wewe"
        android:layout_width="324dp"
        android:layout_height="32dp"

        android:layout_marginStart="36dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/roboto"
        android:text="New Password"
        android:textColor="@color/black"
        android:textSize="19dp"
        app:layout_constraintStart_toStartOf="@id/wew"
        app:layout_constraintTop_toBottomOf="@id/wew" />

    <TextView
        android:id="@+id/wewe1"
        android:layout_width="329dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="76dp"
        android:fontFamily="@font/roboto"
        android:text="Confirm Password"
        android:textColor="@color/black"
        android:textSize="19dp"
        app:layout_constraintStart_toStartOf="@id/wewe"
        app:layout_constraintTop_toBottomOf="@id/wewe" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/passwordc"
        android:layout_width="312dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"

        android:background="@drawable/base_round"
        app:layout_constraintEnd_toEndOf="@id/wewe"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/wewe"
        app:layout_constraintTop_toBottomOf="@id/wewe"></com.google.android.material.textfield.TextInputEditText>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/passwordcc"
        android:layout_width="312dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"

        android:background="@drawable/base_round"
        app:layout_constraintEnd_toEndOf="@id/wewe1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/wewe1"
        app:layout_constraintTop_toBottomOf="@id/wewe1"></com.google.android.material.textfield.TextInputEditText>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/perd"
        android:layout_width="312dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/buttonsuperior"
        android:fontFamily="@font/poppins_semibold"
        android:text="Reset Password"
        android:textColor="@color/white"
        android:textSize="19dp"
        app:layout_constraintEnd_toEndOf="@id/meow"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/wewe"
        app:layout_constraintTop_toBottomOf="@id/wewe"></androidx.appcompat.widget.AppCompatButton>

</androidx.constraintlayout.widget.ConstraintLayout>
