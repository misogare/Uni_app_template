<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/base_background"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/pag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/svge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <TextView
        android:id="@+id/meow"
        android:layout_width="313dp"
        android:layout_height="56dp"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Forgot password?"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.201"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.112" />

    <TextView
        android:id="@+id/wew"
        android:layout_width="327dp"
        android:layout_height="44dp"

        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"

        android:text="Don't worry; we're here to help you regain
         access to your account."
        android:textColor="#575757"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@id/meow"
        app:layout_constraintTop_toBottomOf="@id/meow" />

    <TextView
        android:id="@+id/wewe"
        android:layout_width="327dp"
        android:layout_height="44dp"

        android:layout_marginStart="36dp"
        android:layout_marginTop="32dp"
        android:text="Email"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@id/wew"
        app:layout_constraintTop_toBottomOf="@id/wew" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/rango"
        android:layout_width="312dp"
        android:layout_height="47dp"
        android:layout_marginTop="32dp"

        android:background="@drawable/base_round"
        app:layout_constraintEnd_toEndOf="@id/wewe"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/wewe"
        app:layout_constraintTop_toBottomOf="@id/wewe"></com.google.android.material.textfield.TextInputEditText>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mango"
        android:layout_width="312dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/buttonsuperior"
        android:fontFamily="@font/poppins_semibold"
        android:text="Reset Password"
        android:textColor="@color/white"
        android:textSize="19dp"
        app:layout_constraintEnd_toEndOf="@id/meow"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/wewe"
        app:layout_constraintTop_toBottomOf="@id/wewe"></androidx.appcompat.widget.AppCompatButton>

    <ImageView
        android:id="@+id/textView7"
        android:layout_width="312dp"
        android:layout_height="47dp"
        android:alpha="0.6"
        android:background="#FF7373"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/rango"

        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/rango"
        app:layout_constraintStart_toStartOf="@id/rango"
        app:layout_constraintTop_toTopOf="@id/rango" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="Invalid Email Address"
        android:textColor="#FF0000"
        android:textSize="16dp"

        app:layout_constraintEnd_toEndOf="@id/textView7"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintStart_toStartOf="@id/textView7"

        app:layout_constraintTop_toBottomOf="@id/textView7"></TextView>
</androidx.constraintlayout.widget.ConstraintLayout>
